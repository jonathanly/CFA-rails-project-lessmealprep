<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.image_url %></td>
        <td><%= photo.product.name %></td>
        <td><%= link_to 'Show', product_photo_path(@product, photo) %></td>
        <td><%= link_to 'Edit', edit_product_photo_path(@product, photo) %></td>
        <td><%= link_to 'Destroy', product_photo_path(@product, photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_product_photo_path(@product) %>
